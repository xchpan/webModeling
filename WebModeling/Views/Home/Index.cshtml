@{
 //   ViewBag.Title = "Web Modeling";
}
@section scripts {
    <script type="text/javascript" src="~/Scripts/mine/angularModules.js"></script>
    <script type="text/javascript" src="~/Scripts/mine/allPlantService.js"></script>
    <script type="text/javascript" src="~/Scripts/mine/allPlantController.js"></script>
    <script type="text/javascript" src="~/Scripts/mine/librariesService.js"></script>
    <script type="text/javascript" src="~/Scripts/mine/librariesController.js"></script>
    <script type="text/javascript">
        angular.bootstrap(document.getElementById("all-plants-form"), ['allPlants']);
    </script>
}
@section styles {
    <link rel="stylesheet" href="~/Content/Mine/all-plants.css" />
}
<header>
    <a href="#" id="showplants">Plants</a>
</header>

<main>
    <section id="librariesSection" ng-app="libraries" ng-controller="librariesController">
        <div id="librariesHeader"><h3>Libraries <span class="badge pull-right" ng-click="createLibrary()">+</span></h3></div>
        <div id="libraryList">
            <h3 ng-repeat-start="library in libraries">{{library.Name}} <span class="badge pull-right" ng-click="deleteLibrary(library.Id)">&#x2718</span></h3>
            <div ng-repeat-end class="librayContainer">
                <div ng-repeat="item in library.Items" class="libraryItem">
                    <img src="{{item.Icon}}" class="modelTypeIcon" />
                    <div>{{item.Name}}</div>
                </div>
                <div class="dropdown" style="max-height: 30px">

                    <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                        +
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#" ng-click="addFluid(library.Id)">Fluid</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#" ng-click="addPort(library.Id)">Port</a></li>
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#" ng-click="addModel(library.Id)">Model</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="fluidEditor" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Fluid</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="fluidName" class="control-label col-xs-2">Name</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" id="fluidName" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="fluidDescription" class="control-label col-xs-2">Description</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" id="fluidDescription" placeholder="Description">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="thermoType" class="control-label col-xs-2">Thermo Type</label>
                                <div class="col-xs-10">
                                    <select class="form-control" id="fluidDescription">
                                        <option>Air</option>
                                        <option>Steam</option>
                                        <option>Water</option>
                                        <option>Compositional</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Starting Values</h1>
                            </div>
                            <div class="panel-body form-horizontal">
                                <div class="form-group">
                                    <label for="fluidPressure" class="control-label col-xs-2">Pressure</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="fluidPressure" placeholder="Pressure">
                                    </div>
                                    <div class="col-xs-1">
                                        kPa
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="fluidTemprature" class="control-label col-xs-2">Temprature</label>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" id="fluidTemprature" placeholder="Temprature">
                                    </div>
                                    <div class="col-xs-1">
                                        K
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Methods</h1>
                            </div>
                            <div class="panel-body form-horizontal">
                                <div class="form-group">
                                    <label for="systemMethod" class="control-label col-xs-2">System</label>
                                    <div class="col-xs-10">
                                        <select class="form-control" id="systemMethod">
                                            <option>Soave-Redlich-Kwong (SRK)</option>
                                            <option>Peng-Robinson (PR)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="phaseMethod" class="control-label col-xs-2">Phase</label>
                                    <div class="col-xs-10">
                                        <select class="form-control" id="phaseMethod">
                                            <option>Vapor</option>
                                            <option>Liquid</option>
                                            <option>Vapor/Liquid (VLE)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="liquidDensityMethod" class="control-label col-xs-2">Liquid Density</label>
                                    <div class="col-xs-10">
                                        <select class="form-control" id="liquidDensityMethod">
                                            <option>API</option>
                                            <option>Use System method</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Components <span class="badge pull-right" ng-click="addComponent()">+</span></h1>
                            </div>
                            <div class="panel-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Status</th>
                                            <th>Name</th>
                                            <th>Components</th>
                                            <th>Starting Composition</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><span class="badge" ng-click="deleteLibrary(library.Id)">&#x2718</span></td>
                                            <td></td>
                                            <td>CO2</td>
                                            <td>Multiple level menu to choose</td>
                                            <td>1</td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Icon</h1>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="portEditor" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Port</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="portName" class="control-label col-xs-2">Name</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" id="portName" placeholder="Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="portDescription" class="control-label col-xs-2">Description</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" id="portDescription" placeholder="Description">
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Parameters</h1>
                            </div>
                            <div class="panel-body">Parameter content…</div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h1 class="panel-title">Variables</h1>
                            </div>
                            <div class="panel-body">Variable content…</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="modelEditor" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Model</h4>
                    </div>
                    <div class="modal-body">
                        <p>Do you want to save changes you made to document before closing?</p>
                        <p class="text-warning"><small>If you don't save, your changes will be lost.</small></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="flowsheets">zxC</section>
    <section id="trees">XZVC</section>
</main>

<footer>
    czxv
</footer>

<div id="all-plants-form" title="All Plants" ng-app="allPlants">
    <form ng-controller="AllPlantController">
        <table class="all-plants">
            <thead>
                <tr><th>Name</th><th>Creator</th><th>Created Time</th><th>Description</th><th></th></tr>
            </thead>
            <tr ng-repeat="s in plants">
                <td><input type="text" ng-model="s.Name" ng-change="updatePlant(s.Id)" /></td>
                <td>{{s.Creator}}</td>
                <td>{{s.CreateDatetime}}</td>
                <td><input type="text" ng-model="s.Description" ng-change="updatePlant(s.Id)" /></td>
                <td><button ng-click="deletePlant(s.Id)">&#x2718</button></td>
            </tr>
        </table>
        <fieldset>
            <legend></legend>
            <input type="button" value="createPlant" ng-click="createPlant()" />
        </fieldset>
    </form>
</div>
